{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "python manage.py collectstatic --noinput"
    },
    "deploy": {
      "runtime": "V2",
      "numReplicas": 1,
      "startCommand": "python manage.py makemigrations && python manage.py migrate && python manage.py collectstatic --noinput && gunicorn mysite.wsgi",
      "sleepApplication": false,
      "multiRegionConfig": {
        "europe-west4-drams3a": {
          "numReplicas": 1
        }
      },
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }